<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="3.0dip" />

            <gradient
                android:angle="270.0"
                android:centerColor="#ffe8e8e8"
                android:centerY="0.75"
                android:endColor="#ffbababa"
                android:startColor="#ffbababa" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="3.0dip" />

                <gradient
                    android:angle="270.0"
                    android:centerColor="#ff76e3ff"
                    android:centerY="0.75"
                    android:endColor="#ff41bef1"
                    android:startColor="#ff41bef1" />
            </shape>
        </clip>
    </item>

</layer-list>