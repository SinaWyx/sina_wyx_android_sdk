<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:gravity="center" >

    <ImageView
        android:id="@+id/gamehall_netpage_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/gamehall_network_error_selector" />

    <TextView
        android:id="@+id/gamehall_netpage_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gamehall_netpage_warning"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dip"
        android:layout_marginTop="40dip"
        android:text="@string/gamehall_network_null_retry"
        android:textColor="@color/gamehall_network_error"
        android:textSize="16dp" />

</RelativeLayout>