<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="2dp"
        android:background="@drawable/gamehall_popup_memory_toast_back"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/gamehall_popup_memory_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/gamehall_float_nor"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="14dp"
             />

        <TextView
            android:id="@+id/gamehall_popup_memory_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gamehall_popup_memory_toast_percent"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginLeft="3dp"
            android:visibility="gone"
            android:textSize="14dp"
             />
    </LinearLayout>

</FrameLayout>