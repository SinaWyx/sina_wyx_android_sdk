<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/gamehall_feedback_resend_bg"
    android:orientation="vertical"
    android:padding="14dp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gamehall_reply_send"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/gamehall_feedback_re_send_enter"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="@string/gamehall_feedback_enter"
            android:textColor="@android:color/white"
            android:background="@drawable/gamehall_feedback_button_selector"
            android:textSize="16dp"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/gamehall_feedback_re_send_cancel"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="@string/gamehall_feedback_cancel"
            android:background="@drawable/gamehall_feedback_button_selector"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:layout_margin="10dp"  />
    </LinearLayout>

</LinearLayout>